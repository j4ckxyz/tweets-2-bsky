{
  "name": "tweets-2-bsky",
  "version": "2.0.0",
  "description": "A powerful tool to crosspost Tweets to Bluesky, supporting threads, videos, and high-quality images.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "import": "tsx src/index.ts --import-history",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "bluesky",
    "twitter",
    "crosspost",
    "migration",
    "thread",
    "video"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@atproto/api": "^0.18.9",
    "@steipete/bird": "^0.4.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "franc-min": "^6.2.0",
    "iso-639-1": "^3.1.2",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}